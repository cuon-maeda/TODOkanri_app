<div class="d-flex pt-2 pb-2 mb-1 align-items-center border-top border-bottom">
  <h3 class="mt-1 mb-1">カテゴリ編集</h3>
</div>
<div class="display-1 text-center"><span class="badge badge-secondary"><%= @category.name%></span></div>
<div class="d-flex justify-content-center mr-3 ml-3">
  <%= link_to edit_category_path(@category) do%>
    <button class="btn btn-secondary btn-lg active mt-3 mr-3">編集</button>
  <% end %>
  <%= link_to category_path(@category), method: :delete do%>
    <button class="btn btn-secondary btn-lg active mt-3 ml-3">削除</button>
  <% end %>
</div>
