<div class="box">
  <h3 class="box_title">タスクの編集</h3>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <% @task.errors.full_messages.each do |message| %>
        <p class="mt-1 mb-1">・<%= message %></p>
      <% end %>
    </div>
  <% end %>
  <%= form_with model: @task do |f| %>
    <div class=" input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">タスク</span>
      </div>
      <%= f.text_field :name, class: "form-control", value: @task.name %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">名前</span>
      </div>
      <%= f.text_field :user, class: "form-control", value: @task.user %>
    </div>
    <%= f.submit value: "編集!", class: "btn btn-secondary btn-lg active" %>
  <% end %>
</div>
